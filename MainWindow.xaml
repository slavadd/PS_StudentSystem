                <Label x:Name="LabelFaculty" Content="Факултет:" Visibility="Visible" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" Height="40" Margin="10,5,0,0" VerticalAlignment="Top" Width="99" FontSize="18"/>
